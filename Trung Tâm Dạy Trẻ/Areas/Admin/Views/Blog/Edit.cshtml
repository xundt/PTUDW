@model Trung_Tâm_Dạy_Trẻ.Models.TblBlog

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Sửa sản phẩm</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Sửa bài viết</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Edit">
                            <input type="hidden" asp-for="BlogId" />
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Title">Tiêu đề</label>
                                    <input asp-for="Title" class="form-control">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                @* <div class="form-group"> *@
                                @*     <label asp-for="CategoryProductId">Danh Mục</label> *@
                                @*     <select asp-for="CategoryProductId" class="form-control" asp-items="ViewBag.CategoryProductId"> *@
                                @*         <option value="0" selected>[Chọn danh mục]</option> *@
                                @*     </select> *@
                                @* </div> *@

                                <div class="form-group">
                                    <label asp-for="Alias">Alias</label>
                                    <input asp-for="Alias" class="form-control" readonly>
                                    <span asp-validation-for="Alias" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ImageTeacher">Ảnh Giáo Viên</label>
                                    <input asp-for="ImageTeacher" class="form-control" readonly>
                                    <span asp-validation-for="ImageTeacher" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Image" class="control-label">Ảnh Blog</label>
                                    <div class="input-group mb-3">
                                        <div class="input group-preprend">
                                            <button type="button" class="btn btn-success btn-round" onclick="openDialog()">Choose a picture</button>
                                        </div>
                                        <input type="text" class="form-control" id="file_input" asp-for="Image" aria-describedby="button-addon2">
                                    </div>
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Detail">Mô tả</label>
                                    <textarea asp-for="Detail" class="form-control"></textarea>
                                    <span asp-validation-for="Detail" class="text-danger"></span>
                                </div>

                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" asp-for="IsActive" /> Hiển thị
                                    </label>
                                </div>

                                <div class="d-flex mt-3">
                                    <div class="form-group mr-2">
                                        <button type="submit" class="btn btn-primary rounded">Sửa</button>
                                    </div>

                                    <div class="form-group">
                                        <a class="btn btn-danger rounded mr-3" asp-action="Index" asp-controller="BLog">Quay Lại</a>
                                    </div>

                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



@{
    var summernote = new Trung_Tâm_Dạy_Trẻ.Areas.Admin.Models.SummerNote("#Detail");
    <partial name="_SummerNote" model="summernote" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}