@model IEnumerable<Trung_Tâm_Dạy_Trẻ.Models.TblBlog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý Bài Viết</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Simple Tables</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                </div>
            </div>

            <!-- /.Quản lý  -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a asp-action="Create" class="btn btn-primary">Thêm mới</a>

                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body table-responsive p-0">
                            <table class="table table-bordered table-hover text-center">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tiêu đề</th>
                                        <th>Alias</th>
                                        <th>Ảnh</th>
                                        <th>Ảnh Giáo Viên</th>
                                        <th>Chi tiết </th>
                                        <th>Hiện</th>
                                        <th>Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@item.Title</td>
                                            <td>@item.Alias</td>
                                            <td><img src="@item.Image" width="50" height="50" /></td>
                                            <td><img src="@item.ImageTeacher" width="50" height="50" /></td>
                                            <td>@Html.Raw(item.Detail)</td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge badge-success">Hiện</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Ẩn</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.BlogId" class="btn btn-primary">Sửa</a> |
                                                <a asp-action="Details" asp-route-id="@item.BlogId" class="btn btn-info">Chi tiết</a> |
                                                <a asp-action="Delete" asp-route-id="@item.BlogId" class="btn btn-danger">Xóa</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>
