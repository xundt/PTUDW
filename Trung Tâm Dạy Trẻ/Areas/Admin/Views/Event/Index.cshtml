@model IEnumerable<Trung_Tâm_Dạy_Trẻ.Models.TblEvent>

@{
    ViewData["Title"] = "Quản lý sự kiện";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý sự kiện</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Simple Tables</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                </div>
            </div>

            <!-- /.Quản lý  -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a asp-action="Create" class="btn btn-primary rounded-pill">Thêm mới</a>

                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body table-responsive p-0">
                            <table class="table table-bordered table-hover text-center">
                                <thead class="table-dark">
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên sự kiện</th>
                                        <th>Loại sự kiên</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Địa điểm</th>
                                        <th>Số lượng tham gia</th>
                                        <th>Số lượng tối đa </th>
                                        <th>Ảnh </th>
                                        <th>Hiện</th>
                                        <th>Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@item.EventName</td>
                                            <td>@item.EventType</td>
                                            <td>@item.StartDateTime</td>
                                            <td>@item.Location</td>
                                            <td>@item.CurrentParticipants</td>
                                            <td>@item.MaxParticipants</td>
                                            <td><img src="@item.Image" width="50" height="50" /></td>
                                            <td>
                                                @if (item.IsActive == true)
                                                {
                                                    <span class="badge badge-success">Hiện</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Ẩn</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-warning btn-sm rounded-pill" title="Sửa">
                                                    <i class="fa-solid fa-pen"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-primary btn-sm rounded-pill" title="Chi tiết">
                                                    <i class="fa-solid fa-circle-info"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger btn-sm rounded-pill" title="Xóa">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>